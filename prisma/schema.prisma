datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Note {
    id        Int       @id @default(autoincrement())
    title     String
    content   String
    tags      Tag[]
    createdAt DateTime  @default(now())
    trashed   Boolean   @default(false)
    trashedAt DateTime?
    updatedAt DateTime  @updatedAt
}

model Tag {
    id        Int      @id @default(autoincrement())
    name      String
    notes     Note[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
